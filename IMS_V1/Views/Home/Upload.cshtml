@{
    ViewBag.Title = "Upload";
}

<h2>Upload</h2>
@using (Html.BeginForm ("SaveUpload", 
                        "Home", 
                        FormMethod.Post, 
                        new { enctype = "multipart/form-data" })) 
{                   
    <label for="file">Upload file:</label> 
    <input type="file" name="file" id="file"/><br><br> 
    <input type="submit" value="Upload"/> 
    <br><br> 
    @ViewBag.Message 
}
